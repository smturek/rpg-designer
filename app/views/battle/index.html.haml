.container

  - if :hero_id != nil && :monster_id != nil
    - hero = @characters.sample
    - monster = @monsters.sample
  -else
    - hero = @hero
    - monster = @monster

  .page-header
    %h1 Battle Home

  .row
    .col-md-4.col-md-offset-1
      %h2 Hero
      %i.fa.fa-male.fa-5x

    .col-md-4.col-md-offset-2
      %h2 Monster
      %i.fa.fa-bug.fa-5x

  .row
    .col-md-3.col-md-offset-1
      %table.table
        %thead
          %tr
            %th Name
            %th HP
            %th Power
        %tbody
          %tr
            %td
              = hero.name
            %td
              = hero.hp
            %td 5

    .col-md-3.col-md-offset-3
      %table.table
        %thead
          %tr
            %th Name
            %th HP
            %th Power
        %tbody
          %tr
            %td
              = monster.name
            %td
              = monster.hp
            %td 3

  .row
    .col-md-2.col-md-offset-3
    = link_to "Fight!", fight_path(hero_id: hero.id, monster_id: monster.id), :class => "btn btn-default"
