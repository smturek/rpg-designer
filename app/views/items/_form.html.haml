.container

  .page-header
    %h1
      = title

  = form_for @item, :html => { :class => "form-horizontal"} do |f|

    .form-group
      = f.label :name, :class => "control-label col-md-1"
      .col-md-4
        = f.text_field :name, :class => "form-control"

    .form-group
      = f.label :item_type, "Item Type", :class => "control-label col-md-1"
      .col-md-4
        = f.text_field :item_type, :class => "form-control"

    .form-group
      = f.label :attack, :class => "control-label col-md-1"
      .col-md-4
        = f.number_field :attack, :class => "form-control"

    .form-group
      = f.label :health, :class => "control-label col-md-1"
      .col-md-4
        = f.number_field :health, :class => "form-control"

    = f.submit button, :class => "btn btn-default col-md-offset-1"
