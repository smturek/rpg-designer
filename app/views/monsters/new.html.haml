.container

  .page-header
    %h1 New Monster

  = form_for @monster, :html => {:class => 'form-horizontal'} do |f|

    .form-group
      = f.label :name, :class => "control-label col-md-1"
      .col-md-4
        = f.text_field :name, :class => "form-control"

    .form-group
      = f.label :hp, "HP", :class => "control-label col-md-1"
      .col-md-4
        = f.number_field :hp, :class => "form-control"

    .form-group
      = f.label :mp, "MP", :class => "control-label col-md-1"
      .col-md-4
        = f.number_field :mp, :class => "form-control"

    = f.submit "Create New Monster", :class => "col-md-offset-1 btn btn-default"
