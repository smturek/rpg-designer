.container

  .page-header
    %h1
      = title

  = form_for @monster, :html => {:class => 'form-horizontal'} do |f|

    .form-group
      = f.label :name, :class => "control-label col-md-1"
      .col-md-4
        = f.text_field :name, :class => "form-control"

    .form-group
      = f.label :hp, "HP", :class => "control-label col-md-1"
      .col-md-4
        = f.number_field :hp, :class => "form-control"

    .form-group
      = f.label :att, "Attack", :class => "control-label col-md-1"
      .col-md-4
        = f.number_field :att, :class => "form-control"

    = f.submit button, :class => "col-md-offset-1 btn btn-default"
