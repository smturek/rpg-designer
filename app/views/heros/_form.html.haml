.container

  .page-header
    %h1
      = title

  = form_for @hero, :html => {:class => 'form-horizontal'} do |f|

    .form-group
      = f.label :name, :class => "control-label col-md-1"
      .col-md-4
        = f.text_field :name, :class => "form-control"

    .form-group
      = f.label :base_health, "Health", :class => "control-label col-md-1"
      .col-md-2
        = f.number_field :base_health, :class => "form-control"

    .form-group
      = f.label :base_attack, "Attack", :class => "control-label col-md-1"
      .col-md-2
        = f.number_field :base_attck, :class => "form-control col-md-1"

    = f.submit button, :class => "btn btn-primary bottom-button col-md-offset-1"
