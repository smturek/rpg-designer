.container

  .page_header
    %h1= title

  .row
    .col-md-4.col-md-offset-1
      %h2 Hero
      %i.fa.fa-male.fa-5x

    .col-md-4.col-md-offset-2
      %h2 Monster
      %i.fa.fa-bug.fa-5x

  .row
    .col-md-3.col-md-offset-1
      %table.table
        %thead
          %tr
            %th Name
            %th Health
            %th Attack
        %tbody
          %tr
            %td
              = @battle.hero.name
            %td
              = @battle.hero.current_health
            %td
              = @battle.hero.base_attack

    .col-md-3.col-md-offset-3
      %table.table
        %thead
          %tr
            %th Name
            %th Health
            %th Attack
        %tbody
          %tr
            %td
              = @battle.monster.name
            %td
              = @battle.monster.current_health
            %td
              = @battle.monster.base_attack
