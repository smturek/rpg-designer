.container

  .row
    .page_header.text-center
      %h1 FIGHT!!


  .row
    .col-md-4.col-md-offset-1
      %h2= @battle.hero.name
      %i.fa.fa-male.fa-5x

    .col-md-4.col-md-offset-2
      %h2= @battle.monster.name
      %i.fa.fa-bug.fa-5x

  .row
    .col-md-3.col-md-offset-1
      %table.table
        %thead
          %tr
            %th Health
            %th Attack
        %tbody
          %tr
            %td
              = @battle.hero.base_health
            %td
              = @battle.hero.base_attack

    .col-md-3.col-md-offset-3
      %table.table
        %thead
          %tr
            %th Name
            %th Health
            %th Attack
        %tbody
          %tr
            %td
              = @battle.monster.name
            %td
              = @battle.monster.base_health
            %td
              = @battle.monster.base_attack

  = form_for @battle do |f|
    = f.hidden_field(:hero_id, :value => @battle.hero.id)
    = f.hidden_field(:monster_id, :value => @battle.monster.id)
    .col-md-offset-1
      = f.submit "Attack", :class => "btn btn-default"
