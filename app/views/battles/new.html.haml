.container

  - hero = @heroes.sample
  - monster = @monsters.sample

  .page-header
    %h1 New Battle

  .row
    .col-md-3.col-md-offset-1
      %h2 Hero
      %i.fa.fa-male.fa-5x


    .col-md-3.col-md-offset-3
      %h2 Monster
      %i.fa.fa-bug.fa-5x

  .row
    %br

  .row
    = form_for @battle, :html => {:class => 'form-horizontal'} do |f|
      .col-md-offset-1.col-md-3
        .form-group
          = f.collection_select :hero_id, Hero.all, :id, :name, {include_blank: "Select a hero..."}, {class: "form-control"}

      .col-md-3.col-md-offset-3
        .form-group
          = f.collection_select :monster_id, Monster.all, :id, :name, {include_blank: "Select a monster..."}, {class: "form-control"}
      .col-md-4.col-md-offset-3
        %br
        = f.submit "Start Battle", :class => "btn btn-default btn-lg col-md-6 col-md-offset-5"
