.container

  .page-header
    %h1 Battle Home

  .row
    .col-md-4.col-md-offset-1
      %h2
        = $hero.name
      %i.fa.fa-male.fa-5x

    .col-md-4.col-md-offset-2
      %h2
        = $monster.name
      %i.fa.fa-bug.fa-5x

  .row
    .col-md-3.col-md-offset-1
      %table.table
        %thead
          %tr
            %th HP
            %th Attack
        %tbody
          %tr
            %td
              = $hero.hp
            %td
              = $hero.att

    .col-md-3.col-md-offset-3
      %table.table
        %thead
          %tr
            %th HP
            %th Attack
        %tbody
          %tr
            %td
              = $monster.hp
            %td
              = $monster.att

  = link_to "Attack", fight_path
