.container

  - hero = @heroes.sample
  - monster = @monsters.sample

  .page-header
    %h1 Battle Home

  .row
    .col-md-4.col-md-offset-1
      %h2 Hero
      %i.fa.fa-male.fa-5x

    .col-md-4.col-md-offset-2
      %h2 Monster
      %i.fa.fa-bug.fa-5x

  .row
    .col-md-3.col-md-offset-1
      %table.table
        %thead
          %tr
            %th Name
            %th Health
            %th Attack
        %tbody
          %tr
            %td
              = hero.name
            %td
              = hero.base_health
            %td
              = hero.base_attack

    .col-md-3.col-md-offset-3
      %table.table
        %thead
          %tr
            %th Name
            %th Health
            %th Attack
        %tbody
          %tr
            %td
              = monster.name
            %td
              = monster.base_health
            %td
              = monster.base_attack

  = form_for @battle do |f|
    = f.hidden_field(:hero_id, :value => hero.id)
    = f.hidden_field(:monster_id, :value => monster.id)
    = f.submit
