.container

  .page-header
    .pull-right
      = link_to "Create New Skill", new_skill_path, :class => "btn btn-default"
    %h1 Skills


  %table.table
    %thead
      %tr
        %th Name
        %th Cost
    %tbody
    - @skills.each do |skill|
      %tr
        %td
          = skill.name
        %td
          = skill.cost
        %td
          = link_to "Edit", edit_skill_path(skill)
          |
          = link_to "Delete", skill_path(skill), method: :delete,
          :data => {:confirm => 'Are you sure?'}
